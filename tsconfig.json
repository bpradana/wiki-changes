{
  "compilerOptions": {
    "lib": ["es6"],
    "types": ["node", "express"],
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["dist", "node_modules"],
  "include": ["./src/**/*.ts"]
}
